<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Login' }) %>

<body>
    <%- include('../partials/header') %>
    <main>

        <section class="login-form-login">
            
            <form action="/users/login" method="POST">
                <div>
                    <label for="email">Email:</label>
                  
                    <input type="email" name="email" class="login-controls" required="required" placeholder="Ingrese su Email">
                    <% if (locals.errors && errors.datosError) { %>
                        <p class="text-danger"><%= errors.datosMal.msg %></p>
                    <% } %>
                </div>
                <div>
                    <label for="password">Contraseña:</label>
                    <input type="password" name="password" class="login-controls" required="required" placeholder="Ingrese su contraseña">
                    <% if (locals.errors && errors.datosError) { %>
                        <p class="text-danger"><%= errors.datosMal.msg %></p>
                    <% } %>
                </div>
                <button type="submit" value="Login" class="login-button">Login</button>
                <div class="login-olvidado-contraseña">
					<p><a href="#olvidado">¿Has olvidado tu Contraseña?</a></p>
				</div>
            </form>

        </section>

    </main>
    <%- include('../partials/footer') %>
</body>
</html>