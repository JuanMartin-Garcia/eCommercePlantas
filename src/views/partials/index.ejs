                      </label>
                    </li>
                  </ul>
                </div>
              </div>
            
              <!--Menu-Sidebar-->
              <!--Produtct-Layout-Filter-->
            <div class="col-3-of-4">
                <form action="">
                  <div class="item">
                    <label for="sort-by">Sort By</label>
                    <select name="sort-by" id="sort-by">
                      <option value="title" selected="selected">Name</option>
                      <option value="number">Price</option>
                      <option value="search_api_relevance">Relevance</option>
                      <option value="created">Newness</option>
                    </select>
                  </div>
                  <div class="item">
                    <label for="order-by">Order</label>
                    <select name="order-by" id="sort-by">
                      <option value="ASC" selected="selected">ASC</option>
                      <option value="DESC">DESC</option>
                    </select>
                  </div>
                  <a href="">Apply</a>
                </form>
              
            
             <!--Produtct-Layout-Filter-->
        
        <!--Produtct-Layout-->
         
        <div class="product-layout">
          <% for(let i=0;i<productos.length;i++) { %> 
            <div class="product">
              <div class="img-container">
                <img src="/img/<%=productos[i].imagen %>" class="img-product" alt="" />
                <div class="addCart">
                  <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
              <div class="bottom">
                <a href="../products/detalle-producto"><%=productos[i].nombre %></a>
                <div class="price">
                  <span>$<%=productos[i].precio %></span>
                </div>
              </div>
            </div>
            <% } %>
            
      <!--Section Products-->
